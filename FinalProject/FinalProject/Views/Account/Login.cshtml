@model FinalProject.Models.LoginModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/bootstrap.min.css")
    <title>Login</title>
</head>
<body>
    <div class="d-flex justify-content-center">
        <form class="form-shadow bg-light mt-lg-5 rounded w-50 " method="post">
            <h1 class="text-info text-center w-auto">Login</h1>
            <div class="form-group">
                @Html.LabelFor(model => model.Login, new { htmlAttributes = new { @class = "form-control" } })
                @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your login here." } })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your password here." } })
            </div>
            <button type="submit" class="btn btn-info w-100">Login</button>
        </form>
    </div>
</body>
</html>
